<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uju.coursetracker.presentation.MyCoursesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="@string/mycourse_title"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ListView
            android:id="@+id/CompletedCourseList"
            android:layout_width="match_parent"
            android:layout_height="181dp">

        </ListView>

        <ListView
            android:id="@+id/CurrentCourseList"
            android:layout_width="match_parent"
            android:layout_height="194dp" />

        <Button
            android:id="@+id/CalculateCGPAButton"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="Calculate my CGPA" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
